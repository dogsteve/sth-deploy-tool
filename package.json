{
  "name": "sth-deploy-tool",
  "version": "1.0.0",
  "description": "Cross-platform Docker-less deployment tool for STH services.",
  "main": "main.js",
  "author": "STH Team",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.sth.deployer",
    "productName": "STH Deployer",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "fs-extra": "^11.3.3",
    "isomorphic-git": "^1.36.1",
    "tar-stream": "^3.1.7"
  }
}